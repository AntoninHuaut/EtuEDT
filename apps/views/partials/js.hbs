<script src="/js/libs/jquery-3.4.1.min.js"></script>
<script src="/js/libs/detectmobilebrowser.js"></script>
<script>
    refresh();

    function refresh() {
        let container = [$(".container")];
        if (!container) return;

        if (jQuery.browser.mobile)
            container.forEach(el => {
                el.removeClass("w-25");
                el.removeClass("w-50");
                el.removeClass("w-75");
            });
    }
</script>

