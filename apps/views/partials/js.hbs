<script src="/js/libs/jquery-3.4.1.min.js"></script>
<script src="/js/libs/detectmobilebrowser.js"></script>
<script>
    refresh();

    function refresh() {
        const container = [$(".container")];
        const float = [$('.noFloatMobile')];

        if (jQuery.browser.mobile) {
            if (container)
                container.forEach(el => {
                    el.removeClass("w-25");
                    el.removeClass("w-50");
                    el.removeClass("w-75");
                });

            if (float)
                float.forEach(item => item.removeClass(['noFloatMobile', 'right', 'left']));
        }
    }
</script>

